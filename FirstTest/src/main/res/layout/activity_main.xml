<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- The main content -->
    <FrameLayout
        android:id="@+id/camera_preview"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="top" >

    <!-- Last loaded time layout -->


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingTop = "150px" >

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="fill_parent">

        </LinearLayout>
    </LinearLayout>


    </FrameLayout>



    <EditText
        android:layout_height="50dp"
        android:layout_width="wrap_content"
        android:text="000000"
        android:id="@+id/CWU_id"
        android:inputType="phone"
        android:layout_gravity="left|top"
        android:paddingLeft="70px"/>
    <TextView
        android:layout_height="50dp"
        android:layout_width="wrap_content"
        android:text="CWU"
        android:id="@+id/CWU_label"
        android:layout_gravity="left|top"
        android:paddingTop="30px"/>
    <Spinner
        android:id="@+id/docType_spinner"
        android:layout_height="50dp"
        android:layout_width="400dp"
        android:text="Document Type"
        android:layout_gravity="right|top"
        android:layout_weight="1" />

    <ImageView
        android:id="@+id/settings"
        android:src="@drawable/ic_action_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical" />

    <ImageView
        android:id="@+id/zoom"
        android:src="@drawable/ic_action_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical" />

    <ImageView
        android:id="@+id/cancel"
        android:src="@drawable/ic_navigation_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|bottom" />

    <ImageView
        android:id="@+id/accept"
        android:src="@drawable/ic_navigation_accept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom" />

    <ImageView
        android:id="@+id/capture"
        android:src="@drawable/ic_content_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom" />


</FrameLayout>



